{
  "name": "cucumber-hugo",
  "description": "Hugo theme for *.cucumber.io",
  "author": "Cucumber Ltd",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^7.1.0",
    "bulma": "^0.4.1",
    "node-sass": "^4.5.2",
    "postcss-cli": "^4.0.0",
    "rimraf": "^2.6.1"
  },
  "scripts": {
    "build": "yarn build-clean && yarn build-sass && yarn build-autoprefix",
    "build-autoprefix": "postcss --use autoprefixer --output static/css/cucumber.css static/css/cucumber.css",
    "build-clean": "rimraf static/css/cucumber.css",
    "build-sass": "node-sass --output-style expanded --source-map true static/css/cucumber.sass static/css/cucumber.css",
    "start": "yarn build-sass -- --watch"
  }
}
